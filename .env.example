# JimBot Minimal Services Configuration
# Copy this file to .env and adjust values as needed

# Memgraph Ports
MEMGRAPH_PORT=7687
MEMGRAPH_LAB_PORT=3000

# QuestDB Ports
QUESTDB_HTTP_PORT=9000
QUESTDB_PG_PORT=8812
QUESTDB_ILP_PORT=9009

# EventStoreDB Ports
EVENTSTORE_TCP_PORT=1113
