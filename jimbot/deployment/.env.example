# JimBot Environment Configuration
# Copy this file to .env and update with your values

# General Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
JIMBOT_DEBUG=false

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-opus
CLAUDE_HOURLY_LIMIT=100
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.7

# Memory Allocation (adjust based on your system)
MEMGRAPH_MEMORY=12g
RAY_HEAD_MEMORY=4g
RAY_WORKER_MEMORY=4g
QUESTDB_MEMORY=3g
EVENTSTORE_MEMORY=3g
REDIS_MEMORY=1g
MCP_MEMORY=1g
CLAUDE_MEMORY=512m
ANALYTICS_MEMORY=1g

# Service Ports
MCP_PORT=8765
METRICS_PORT=8080

# MCP Configuration
MCP_BATCH_WINDOW_MS=100
MCP_MAX_BATCH_SIZE=1000
MCP_WEBSOCKET_TIMEOUT=30

# Ray Configuration
RAY_NUM_WORKERS=2
RAY_NUM_CPUS=4
RAY_OBJECT_STORE_MEMORY=2g
RAY_DASHBOARD_HOST=0.0.0.0

# Training Configuration
TRAINING_BATCH_SIZE=32
TRAINING_LEARNING_RATE=0.0003
TRAINING_CHECKPOINT_INTERVAL=1000
TRAINING_MAX_EPISODES=1000000

# Database Configuration
MEMGRAPH_STORAGE_MODE=on-disk
QUESTDB_WAL_ENABLED=true
EVENTSTORE_CHUNK_SIZE=256MB

# Monitoring Configuration
METRICS_RETENTION_DAYS=30
ALERT_EMAIL=
SLACK_WEBHOOK_URL=

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=us-east-1

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8

# Security
JWT_SECRET=change-this-secret-key
API_KEY=change-this-api-key
ENABLE_AUTH=false

# Performance Tuning
ENABLE_PROFILING=false
CACHE_SIZE_MB=1000
CONNECTION_POOL_SIZE=10

# Feature Flags
ENABLE_CLAUDE_ADVISOR=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_EVENT_REPLAY=false